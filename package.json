{
  "name": "aural-design",
  "version": "1.0.0",
  "description": "A modern, accessible design system with comprehensive components, utilities, and themes",
  "main": "dist/aural-ui.js",
  "module": "dist/esm/index.js",
  "types": "types/index.d.ts",
  "style": "dist/aural-ui.css",
  "files": [
    "dist/",
    "themes/",
    "types/",
    "utilities/",
    "README.md",
    "LICENSE"
  ],
  "scripts": {
    "dev": "npm run watch",
    "watch": "npm-run-all --parallel watch:*",
    "watch:css": "postcss src/aural-ui.css -o dist/aural-ui.css --watch",
    "build": "npm-run-all build:*",
    "build:css": "postcss src/aural-ui.css -o dist/aural-ui.css",
    "build:css:min": "postcss src/aural-ui.css -o dist/aural-ui.min.css --env production",
    "build:js": "esbuild javascript/index.js --bundle --outfile=dist/aural-ui.js",
    "build:js:min": "esbuild javascript/index.js --bundle --minify --outfile=dist/aural-ui.min.js",
    "serve": "serve docs -p 3001",
    "prepublishOnly": "npm run build"
  },
  "keywords": [
    "ui",
    "design-system",
    "components",
    "css",
    "javascript",
    "accessibility",
    "wcag",
    "a11y",
    "ui-components",
    "white-label",
    "tokens",
    "design-tokens",
    "theme",
    "dark-mode",
    "responsive",
    "utilities",
    "tailwind-like"
  ],
  "author": "Workshop BAI Team",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/ferology/aural-ui.git"
  },
  "homepage": "https://ferology.github.io/aural-ui/",
  "bugs": {
    "url": "https://github.com/ferology/aural-ui/issues"
  },
  "devDependencies": {
    "autoprefixer": "^10.4.16",
    "cssnano": "^6.0.2",
    "esbuild": "^0.19.11",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.32",
    "postcss-cli": "^11.0.0",
    "postcss-import": "^16.0.0",
    "postcss-nesting": "^12.0.2",
    "serve": "^14.2.1"
  }
}

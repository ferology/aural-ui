        <!-- Dynamic Theme Switching -->
        <section class="section" id="dynamic">
            <h2 class="section-title">Dynamic Theme Switching</h2>
            <p class="section-description">
                Allow users to switch between themes at runtime. Here's a simple implementation using JavaScript.
            </p>

            <div class="code-block">
                <button class="btn btn-sm btn-secondary copy-btn" onclick="copyCode(this)">Copy</button>
                <code>
<span class="comment">&lt;!-- HTML --&gt;</span>
<span class="keyword">&lt;link</span> <span class="property">rel</span>=<span class="string">"stylesheet"</span> <span class="property">href</span>=<span class="string">"./dark.css"</span> <span class="property">id</span>=<span class="string">"theme-link"</span><span class="keyword">&gt;</span>
<span class="keyword">&lt;button</span> <span class="property">onclick</span>=<span class="string">"toggleTheme()"</span><span class="keyword">&gt;</span>Toggle Theme<span class="keyword">&lt;/button&gt;</span>

<span class="comment">&lt;!-- JavaScript --&gt;</span>
<span class="keyword">&lt;script&gt;</span>
  <span class="keyword">function</span> <span class="function">toggleTheme</span>() {
    <span class="keyword">const</span> themeLink = <span class="keyword">document</span>.<span class="function">getElementById</span>(<span class="string">'theme-link'</span>);
    <span class="keyword">const</span> currentTheme = themeLink.<span class="function">getAttribute</span>(<span class="string">'href'</span>);

    <span class="keyword">if</span> (currentTheme.<span class="function">includes</span>(<span class="string">'dark'</span>)) {
      themeLink.<span class="function">setAttribute</span>(<span class="string">'href'</span>, <span class="string">'./light.css'</span>);
      localStorage.<span class="function">setItem</span>(<span class="string">'theme'</span>, <span class="string">'light'</span>);
    } <span class="keyword">else</span> {
      themeLink.<span class="function">setAttribute</span>(<span class="string">'href'</span>, <span class="string">'./dark.css'</span>);
      localStorage.<span class="function">setItem</span>(<span class="string">'theme'</span>, <span class="string">'dark'</span>);
    }
  }

  <span class="comment">// Load saved theme preference</span>
  <span class="keyword">const</span> savedTheme = localStorage.<span class="function">getItem</span>(<span class="string">'theme'</span>);
  <span class="keyword">if</span> (savedTheme) {
    <span class="keyword">document</span>.<span class="function">getElementById</span>(<span class="string">'theme-link'</span>)
      .<span class="function">setAttribute</span>(<span class="string">'href'</span>, <span class="string">`./</span>${savedTheme}<span class="string">.css`</span>);
  }
<span class="keyword">&lt;/script&gt;</span>
                </code>
            </div>

            <div class="alert alert-success" style="margin-top: var(--space-6);">
                <strong>Try it now!</strong> Click the "Toggle Theme" button in the bottom right corner to see theme switching in action.
            </div>

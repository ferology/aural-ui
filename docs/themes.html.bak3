<span class="comment">&lt;!-- Load dark or light theme as your base --&gt;</span>
<span class="keyword">&lt;link</span> <span class="property">rel</span>=<span class="string">"stylesheet"</span> <span class="property">href</span>=<span class="string">"./dark.css"</span><span class="keyword">&gt;</span>

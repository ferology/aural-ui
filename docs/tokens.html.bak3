    <!-- Main Content -->
    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Design Tokens</h1>
            <p class="page-description">
                Aural UI uses design tokens (CSS custom properties) for all design decisions. This ensures consistency and makes theming straightforward. Copy any token name to use in your custom CSS.
            </p>
        </div>

        <!-- In-Page Navigation -->
        <nav class="card" style="margin-bottom: var(--space-8); padding: var(--space-4);">
            <div style="font-size: var(--text-sm); font-weight: var(--font-semibold); color: var(--color-text-secondary); text-transform: uppercase; letter-spacing: var(--tracking-wide); margin-bottom: var(--space-3);">On This Page</div>
            <div style="display: flex; gap: var(--space-4); flex-wrap: wrap;">
                <a href="#colors" style="color: var(--color-primary); text-decoration: none; font-size: var(--text-sm);">Colors</a>
                <a href="#spacing" style="color: var(--color-primary); text-decoration: none; font-size: var(--text-sm);">Spacing</a>
                <a href="#typography" style="color: var(--color-primary); text-decoration: none; font-size: var(--text-sm);">Typography</a>
                <a href="#radius" style="color: var(--color-primary); text-decoration: none; font-size: var(--text-sm);">Border Radius</a>
                <a href="#shadows" style="color: var(--color-primary); text-decoration: none; font-size: var(--text-sm);">Shadows</a>
            </div>
        </nav>

        <!-- COLORS -->
        <section class="token-category" id="colors">
            <h2 class="category-title">Colors</h2>
            <p class="category-description">

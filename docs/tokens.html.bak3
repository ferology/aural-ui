                        <div class="spacing-value">1.5rem (24px)</div>
                    </div>
                    <button class="copy-token-btn" onclick="copyToken('var(--space-6)')">Copy</button>
                </div>
                <div class="spacing-item">
                    <div class="spacing-visual">
                        <div class="spacing-bar" style="width: 32px;"></div>
                    </div>
                    <div class="spacing-info">
                        <div class="spacing-name">--space-8</div>
                        <div class="spacing-value">2rem (32px)</div>
                    </div>
                    <button class="copy-token-btn" onclick="copyToken('var(--space-8)')">Copy</button>
                </div>
                <div class="spacing-item">
                    <div class="spacing-visual">
                        <div class="spacing-bar" style="width: 48px;"></div>
                    </div>
                    <div class="spacing-info">
                        <div class="spacing-name">--space-12</div>
                        <div class="spacing-value">3rem (48px)</div>
                    </div>
                    <button class="copy-token-btn" onclick="copyToken('var(--space-12)')">Copy</button>
                </div>
                <div class="spacing-item">
                    <div class="spacing-visual">
                        <div class="spacing-bar" style="width: 64px;"></div>
                    </div>
                    <div class="spacing-info">
                        <div class="spacing-name">--space-16</div>
                        <div class="spacing-value">4rem (64px)</div>
                    </div>
                    <button class="copy-token-btn" onclick="copyToken('var(--space-16)')">Copy</button>
                </div>
            </div>

            <div class="alert alert-info" style="margin-top: var(--space-6);">
                <strong>Usage Example:</strong><br>
                <code style="font-family: var(--font-mono);">padding: var(--space-4); margin-top: var(--space-6);</code>
            </div>

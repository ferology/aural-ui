        </section>

        <!-- SPACING -->
        <section class="token-category" id="spacing">
            <h2 class="category-title">Spacing</h2>
            <p class="category-description">
                Spacing scale based on a 4px (0.25rem) unit for consistent layouts. Use these tokens for margin, padding, and gap properties.
            </p>

            <div class="spacing-grid">
                <div class="spacing-item">
                    <div class="spacing-visual">
                        <div class="spacing-bar" style="width: 4px;"></div>
                    </div>
                    <div class="spacing-info">
                        <div class="spacing-name">--space-1</div>
                        <div class="spacing-value">0.25rem (4px)</div>
                    </div>
                    <button class="copy-token-btn" onclick="copyToken('var(--space-1)')">Copy</button>
                </div>
                <div class="spacing-item">
                    <div class="spacing-visual">
                        <div class="spacing-bar" style="width: 8px;"></div>
                    </div>
                    <div class="spacing-info">
                        <div class="spacing-name">--space-2</div>
                        <div class="spacing-value">0.5rem (8px)</div>
                    </div>
                    <button class="copy-token-btn" onclick="copyToken('var(--space-2)')">Copy</button>
                </div>
                <div class="spacing-item">
                    <div class="spacing-visual">
                        <div class="spacing-bar" style="width: 12px;"></div>
                    </div>
                    <div class="spacing-info">
                        <div class="spacing-name">--space-3</div>
                        <div class="spacing-value">0.75rem (12px)</div>
                    </div>
                    <button class="copy-token-btn" onclick="copyToken('var(--space-3)')">Copy</button>
                </div>
                <div class="spacing-item">
                    <div class="spacing-visual">
                        <div class="spacing-bar" style="width: 16px;"></div>

        <!-- TYPOGRAPHY -->
        <section class="token-category" id="typography">
            <h2 class="category-title">Typography</h2>
            <p class="category-description">
                Typography tokens for font sizes, weights, line heights, and letter spacing. All sizes are responsive and accessible.
            </p>

            <h3 style="font-size: var(--text-xl); font-weight: var(--font-semibold); color: var(--color-text-primary); margin-top: var(--space-6); margin-bottom: var(--space-4);">Font Sizes</h3>

            <div class="typography-sample">

    <!-- Navigation & Theme Toggle -->
    <script>
        

        

        

        // Theme Toggle with localStorage persistence
        function toggleTheme() {
            const themeLink = document.getElementById('theme-link');
            const currentTheme = themeLink.getAttribute('href');

            if (currentTheme.includes('dark')) {
                themeLink.setAttribute('href', '../light.css');
                localStorage.setItem('aural-theme', 'light');
            } else {
                themeLink.setAttribute('href', '../dark.css');
                localStorage.setItem('aural-theme', 'dark');
            }
        }

        // Load saved theme on page load
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('aural-theme') || 'dark';
            const themeLink = document.getElementById('theme-link');
            themeLink.setAttribute('href', `../${savedTheme}.css`);

            // Close mobile menu when clicking navigation links
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    // Only close on mobile
                    if (window.innerWidth <= 768) {
                    }
                });
            });

            // Initialize Lucide Icons
            lucide.createIcons();
        });
    </script>

    <!-- Time Picker Component JavaScript -->
    <script>
        class TimePicker {
            constructor(elementId, options = {}) {
                this.element = document.getElementById(elementId);
                if (!this.element) return;

                this.input = this.element.querySelector('.aural-time-picker__input');
                this.dropdown = this.element.querySelector('.aural-time-picker__dropdown');
                this.toggleBtn = this.element.querySelector('.aural-time-picker__toggle');
                this.hoursList = this.element.querySelector('.aural-time-picker__list--hours');
                this.minutesList = this.element.querySelector('.aural-time-picker__list--minutes');
                this.periodBtns = this.element.querySelectorAll('.aural-time-picker__period-btn');
                this.nowBtn = this.element.querySelector('.aural-time-picker__now-btn');
                this.clearBtn = this.element.querySelector('.aural-time-picker__action-btn:first-child');
                this.doneBtn = this.element.querySelector('.aural-time-picker__action-btn--primary');

                this.is24Hour = options.is24Hour || false;
                this.selectedHour = 12;
                this.selectedMinute = 0;
                this.selectedPeriod = 'AM';

                this.init();
            }

            init() {
                // Toggle dropdown
                this.toggleBtn.addEventListener('click', () => {
                    this.toggleDropdown();
                });

                this.input.addEventListener('click', () => {
                    this.openDropdown();
                });

                // Generate hour and minute options
                this.renderHours();
                this.renderMinutes();

                // Period buttons
                this.periodBtns.forEach(btn => {
                    btn.addEventListener('click', () => {
                        this.selectPeriod(btn.textContent);
                    });
                });

                // Set initial AM button as active
                if (this.periodBtns.length > 0) {
                    this.periodBtns[0].classList.add('aural-time-picker__period-btn--active');
                }

                // Now button
                this.nowBtn.addEventListener('click', () => {
                    this.setNow();
                });

                // Action buttons
                this.clearBtn.addEventListener('click', () => {
                    this.clear();
                });

                this.doneBtn.addEventListener('click', () => {
                    this.done();
                });

                // Close dropdown when clicking outside
                document.addEventListener('click', (e) => {
                    if (!this.element.contains(e.target)) {
                        this.closeDropdown();
                    }
                });

                // Initial update
                this.updateDisplay();
            }

            renderHours() {
                this.hoursList.innerHTML = '';
                const hours = this.is24Hour ? 24 : 12;

                for (let i = 1; i <= hours; i++) {
                    const hour = this.is24Hour ? i - 1 : i;
                    const button = document.createElement('button');
                    button.type = 'button';
                    button.className = 'aural-time-picker__option';
                    button.textContent = String(hour).padStart(2, '0');
                    button.dataset.value = hour;

                    if (hour === this.selectedHour) {
                        button.classList.add('aural-time-picker__option--selected');
                    }

                    button.addEventListener('click', () => {
                        this.selectHour(hour);
                    });

                    this.hoursList.appendChild(button);
                }
            }

            renderMinutes() {
                this.minutesList.innerHTML = '';

                for (let i = 0; i < 60; i += 5) {
                    const button = document.createElement('button');
                    button.type = 'button';
                    button.className = 'aural-time-picker__option';
                    button.textContent = String(i).padStart(2, '0');
                    button.dataset.value = i;

                    if (i === this.selectedMinute) {
                        button.classList.add('aural-time-picker__option--selected');
                    }

                    button.addEventListener('click', () => {
                        this.selectMinute(i);
                    });

                    this.minutesList.appendChild(button);
                }
            }

            selectHour(hour) {
                this.selectedHour = hour;
                this.updateHourSelection();
                this.updateDisplay();
            }

            selectMinute(minute) {
                this.selectedMinute = minute;
                this.updateMinuteSelection();
                this.updateDisplay();
            }

            selectPeriod(period) {
                this.selectedPeriod = period;
                this.periodBtns.forEach(btn => {
                    if (btn.textContent === period) {
                        btn.classList.add('aural-time-picker__period-btn--active');
                    } else {
                        btn.classList.remove('aural-time-picker__period-btn--active');
                    }
                });
                this.updateDisplay();
            }

            updateHourSelection() {
                this.hoursList.querySelectorAll('.aural-time-picker__option').forEach(btn => {
                    if (parseInt(btn.dataset.value) === this.selectedHour) {
                        btn.classList.add('aural-time-picker__option--selected');
                        btn.scrollIntoView({ block: 'nearest' });
                    } else {
                        btn.classList.remove('aural-time-picker__option--selected');
                    }
                });
            }

            updateMinuteSelection() {
                this.minutesList.querySelectorAll('.aural-time-picker__option').forEach(btn => {
                    if (parseInt(btn.dataset.value) === this.selectedMinute) {
                        btn.classList.add('aural-time-picker__option--selected');
                        btn.scrollIntoView({ block: 'nearest' });
                    } else {
                        btn.classList.remove('aural-time-picker__option--selected');
                    }
                });
            }

            updateDisplay() {
                const hour = String(this.selectedHour).padStart(2, '0');
                const minute = String(this.selectedMinute).padStart(2, '0');

                if (this.is24Hour) {
                    this.input.value = `${hour}:${minute}`;
                } else {
                    this.input.value = `${hour}:${minute} ${this.selectedPeriod}`;
                }
            }

            setNow() {
                const now = new Date();
                let hour = now.getHours();
                const minute = Math.floor(now.getMinutes() / 5) * 5;

                if (!this.is24Hour) {
                    this.selectedPeriod = hour >= 12 ? 'PM' : 'AM';
                    hour = hour % 12 || 12;
                }

                this.selectedHour = hour;
                this.selectedMinute = minute;

                this.renderHours();
                this.renderMinutes();
                this.updateHourSelection();
                this.updateMinuteSelection();
                this.periodBtns.forEach(btn => {
                    if (btn.textContent === this.selectedPeriod) {
                        btn.classList.add('aural-time-picker__period-btn--active');
                    } else {
                        btn.classList.remove('aural-time-picker__period-btn--active');
                    }
                });
                this.updateDisplay();
            }

            clear() {
                this.input.value = '';
                this.selectedHour = 12;
                this.selectedMinute = 0;
                this.selectedPeriod = 'AM';
                this.renderHours();
                this.renderMinutes();
                this.periodBtns.forEach(btn => {
                    if (btn.textContent === 'AM') {
                        btn.classList.add('aural-time-picker__period-btn--active');
                    } else {
                        btn.classList.remove('aural-time-picker__period-btn--active');
                    }
                });
            }

            done() {
                this.closeDropdown();

                // Dispatch custom event
                const event = new CustomEvent('time-select', {
                    detail: {
                        hour: this.selectedHour,
                        minute: this.selectedMinute,
                        period: this.selectedPeriod,
                        formatted: this.input.value
                    }
                });
                this.element.dispatchEvent(event);
            }

            toggleDropdown() {
                const isOpen = this.element.classList.contains('aural-time-picker--open');
                if (isOpen) {
                    this.closeDropdown();
                } else {
                    this.openDropdown();
                }
            }

            openDropdown() {
                this.element.classList.add('aural-time-picker--open');
                this.input.setAttribute('aria-expanded', 'true');
            }

            closeDropdown() {
                this.element.classList.remove('aural-time-picker--open');
                this.input.setAttribute('aria-expanded', 'false');
            }
        }

        // Initialize time picker when everything is loaded
        window.addEventListener('load', () => {
            console.log('Initializing time picker...');
            if (document.getElementById('demo-time-picker-1')) {
                new TimePicker('demo-time-picker-1', { is24Hour: false });
                console.log('Time picker initialized!');
            } else {
                console.error('Time picker element not found!');
            }
        });
    </script>

    <script>
        // Auto-scroll active nav item into view
        document.addEventListener('DOMContentLoaded', function() {
            const activeLink = document.querySelector('.nav-link.active');
            if (activeLink) {
                // Scroll the active item into view with some offset
                setTimeout(() => {
                    activeLink.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
            }
        });
    </script>
    <!-- Unified Theme Sync -->
    <script>
    (function() {
        // Sync theme from localStorage
        const savedTheme = localStorage.getItem('theme') || 'dark';
        const themeLink = document.getElementById('theme-link');
        if (themeLink) {
            const isInComponents = window.location.pathname.includes('/components/');
            const relativePath = isInComponents ? '../' : './';
            themeLink.href = savedTheme === 'dark' ? relativePath + 'dark.css' : relativePath + 'light.css';
        }

        // Hide theme toggle in iframe (demo.html controls theme)
        try {
            if (window.self !== window.top) {
                const themeToggle = document.querySelector('.theme-toggle');
                if (themeToggle) {
                    themeToggle.style.display = 'none';
                }
            }
        } catch (e) {}
    })();
    </script>

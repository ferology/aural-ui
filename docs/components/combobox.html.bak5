        // Theme Toggle with localStorage persistence
        function toggleTheme() {
            const themeLink = document.getElementById('theme-link');
            const currentTheme = themeLink.getAttribute('href');

            if (currentTheme.includes('dark')) {
                themeLink.setAttribute('href', '../light.css');
                localStorage.setItem('aural-theme', 'light');
            } else {
                themeLink.setAttribute('href', '../dark.css');
                localStorage.setItem('aural-theme', 'dark');
            }
        }

        // Load saved theme on page load
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('aural-theme') || 'dark';
            const themeLink = document.getElementById('theme-link');
            themeLink.setAttribute('href', `../${savedTheme}.css`);

            // Close mobile menu when clicking navigation links
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    // Only close on mobile
                    if (window.innerWidth <= 768) {
                    }
                });
            });
        });

        // Initialize Lucide Icons
        lucide.createIcons();
    </script>

    <!-- Combobox Component JavaScript -->
    <script>
        class Combobox {
            constructor(elementId, options = {}) {
                this.element = document.getElementById(elementId);
                if (!this.element) return;

                this.input = this.element.querySelector('.aural-combobox__input');
                this.dropdown = this.element.querySelector('.aural-combobox__dropdown');
                this.optionsContainer = this.element.querySelector('.aural-combobox__options');
                this.clearBtn = this.element.querySelector('.aural-combobox__clear');

                // Default options
                this.data = options.data || [
                    { value: 'react', label: 'React' },
                    { value: 'vue', label: 'Vue.js' },
                    { value: 'angular', label: 'Angular' },
                    { value: 'svelte', label: 'Svelte' },
                    { value: 'ember', label: 'Ember.js' },
                    { value: 'backbone', label: 'Backbone.js' },
                    { value: 'preact', label: 'Preact' },
                    { value: 'solid', label: 'Solid.js' }
                ];

                this.selectedValue = null;
                this.focusedIndex = -1;

                this.init();
            }

            init() {
                // Input events
                this.input.addEventListener('input', (e) => {
                    this.handleInput(e.target.value);
                });

                this.input.addEventListener('focus', () => {
                    this.openDropdown();
                    this.renderOptions(this.data);
                });

                this.input.addEventListener('blur', () => {
                    // Delay to allow click on option
                    setTimeout(() => this.closeDropdown(), 200);
                });

                // Clear button
                this.clearBtn.addEventListener('click', (e) => {
                    e.preventDefault();
                    this.clear();
                });

                // Keyboard navigation
                this.input.addEventListener('keydown', (e) => this.handleKeyboard(e));

                // Close dropdown when clicking outside
                document.addEventListener('click', (e) => {
                    if (!this.element.contains(e.target)) {
                        this.closeDropdown();
                    }
                });

                // Initial render
                this.renderOptions(this.data);
                this.updateClearButton();
            }

            handleInput(value) {
                const filtered = this.filterOptions(value);
                this.renderOptions(filtered);
                this.openDropdown();
                this.updateClearButton();
            }

            filterOptions(searchTerm) {
                if (!searchTerm) return this.data;

                const term = searchTerm.toLowerCase();
                return this.data.filter(item =>
                    item.label.toLowerCase().includes(term)
                );
            }

            renderOptions(options) {
                this.optionsContainer.innerHTML = '';

                if (options.length === 0) {
                    const noResults = document.createElement('div');
                    noResults.className = 'aural-combobox__no-results';
                    noResults.textContent = 'No results found';
                    this.optionsContainer.appendChild(noResults);
                    return;
                }

                options.forEach((item, index) => {
                    const option = document.createElement('button');
                    option.type = 'button';
                    option.className = 'aural-combobox__option';
                    option.dataset.value = item.value;
                    option.dataset.index = index;

                    // Highlight matching text
                    const searchTerm = this.input.value.toLowerCase();
                    const label = item.label;
                    const startIndex = label.toLowerCase().indexOf(searchTerm);

                    if (searchTerm && startIndex !== -1) {
                        const beforeMatch = label.substring(0, startIndex);
                        const match = label.substring(startIndex, startIndex + searchTerm.length);
                        const afterMatch = label.substring(startIndex + searchTerm.length);

                        option.innerHTML = `
                            ${beforeMatch}<mark class="aural-combobox__highlight">${match}</mark>${afterMatch}
                        `;
                    } else {
                        option.textContent = label;
                    }

                    option.addEventListener('click', () => {
                        this.selectOption(item);
                    });

                    this.optionsContainer.appendChild(option);
                });
            }

            selectOption(item) {
                this.selectedValue = item.value;
                this.input.value = item.label;
                this.closeDropdown();
                this.updateClearButton();

                // Dispatch custom event
                const event = new CustomEvent('combobox-select', {
                    detail: { value: item.value, label: item.label }
                });
                this.element.dispatchEvent(event);
            }

            clear() {
                this.input.value = '';
                this.selectedValue = null;
                this.renderOptions(this.data);
                this.input.focus();
                this.updateClearButton();
            }

            openDropdown() {
                this.dropdown.classList.add('aural-combobox__dropdown--open');
                this.input.setAttribute('aria-expanded', 'true');
            }

            closeDropdown() {
                this.dropdown.classList.remove('aural-combobox__dropdown--open');
                this.input.setAttribute('aria-expanded', 'false');
                this.focusedIndex = -1;
            }

            updateClearButton() {
                if (this.input.value) {
                    this.clearBtn.style.display = 'flex';
                } else {
                    this.clearBtn.style.display = 'none';
                }
            }

            handleKeyboard(e) {
                const isOpen = this.dropdown.classList.contains('aural-combobox__dropdown--open');
                const options = Array.from(this.optionsContainer.querySelectorAll('.aural-combobox__option'));

                switch(e.key) {
                    case 'Escape':
                        if (isOpen) {
                            e.preventDefault();
                            this.closeDropdown();
                        }
                        break;
                    case 'Enter':
                        if (isOpen && this.focusedIndex >= 0 && options[this.focusedIndex]) {
                            e.preventDefault();
                            const value = options[this.focusedIndex].dataset.value;
                            const item = this.data.find(d => d.value === value);
                            if (item) this.selectOption(item);
                        }
                        break;
                    case 'ArrowDown':
                        if (!isOpen) {
                            this.openDropdown();
                        } else {
                            e.preventDefault();
                            this.focusedIndex = Math.min(this.focusedIndex + 1, options.length - 1);
                            this.updateOptionFocus(options);
                        }
                        break;
                    case 'ArrowUp':
                        if (isOpen) {
                            e.preventDefault();
                            this.focusedIndex = Math.max(this.focusedIndex - 1, 0);
                            this.updateOptionFocus(options);
                        }
                        break;
                    case 'Tab':
                        if (isOpen) {
                            this.closeDropdown();
                        }
                        break;
                }
            }

            updateOptionFocus(options) {
                options.forEach((opt, idx) => {
                    if (idx === this.focusedIndex) {
                        opt.classList.add('aural-combobox__option--focused');
                        opt.scrollIntoView({ block: 'nearest' });
                    } else {
                        opt.classList.remove('aural-combobox__option--focused');
                    }
                });
            }
        }

        // Initialize combobox
        document.addEventListener('DOMContentLoaded', () => {
            new Combobox('demo-combobox-1');
        });
    </script>

    <script>

        // Auto-scroll active nav item into view
        document.addEventListener('DOMContentLoaded', function() {
            const activeLink = document.querySelector('.nav-link.active');
            if (activeLink) {
                // Scroll the active item into view with some offset
                setTimeout(() => {
                    activeLink.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
            }
        });

    </script>
    <!-- Unified Theme Sync -->
    <script>
    (function() {
        // Sync theme from localStorage
        const savedTheme = localStorage.getItem('theme') || 'dark';
        const themeLink = document.getElementById('theme-link');
        if (themeLink) {
            const isInComponents = window.location.pathname.includes('/components/');
            const relativePath = isInComponents ? '../' : './';
            themeLink.href = savedTheme === 'dark' ? relativePath + 'dark.css' : relativePath + 'light.css';
        }

        // Hide theme toggle in iframe (demo.html controls theme)
        try {
            if (window.self !== window.top) {
                const themeToggle = document.querySelector('.theme-toggle');
                if (themeToggle) {
                    themeToggle.style.display = 'none';
                }
            }
        } catch (e) {}
    })();
    </script>

<body>
    <!-- Mobile Header -->
    
    </div>

    <!-- Sidebar Overlay -->
    

    <!-- Mobile Overlay -->
    

    <!-- Theme Toggle -->
    <div class="theme-toggle">
        <button class="btn btn-secondary" onclick="toggleTheme()">
            <i data-lucide="sun"></i>
            <span class="theme-toggle-text">Toggle Theme</span>
        </button>
    </div>

    <!-- Sidebar Navigation -->
    

    <!-- Main Content -->
    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Slider</h1>
            <p class="page-description">
                Range slider for selecting numeric values.
            </p>
        </div>

        
        <div class="example-container">
                <div class="example-label">Basic Slider</div>
                <div class="example-demo">
                    <div class="aural-slider" id="demo-slider-1">
                        <div class="aural-slider__label-row">
                            <label class="aural-slider__label">Volume</label>
                            <span class="aural-slider__value">50</span>
                        </div>
                        <div class="aural-slider__track">
                            <input type="range" class="aural-slider__input" min="0" max="100" value="50">
                        </div>
                    </div>
                </div>
            </div>

            <div class="example-container">
                <div class="example-label">Slider with Color Variants</div>
                <div class="example-demo">
                    <div class="component-grid">
                        <div class="aural-slider aural-slider--success" id="demo-slider-success">
                            <div class="aural-slider__label-row">
                                <label class="aural-slider__label">Success</label>
                                <span class="aural-slider__value">75</span>
                            </div>
                            <input type="range" class="aural-slider__input" min="0" max="100" value="75">
                        </div>
                        <div class="aural-slider aural-slider--warning" id="demo-slider-warning">
                            <div class="aural-slider__label-row">
                                <label class="aural-slider__label">Warning</label>
                                <span class="aural-slider__value">60</span>
                            </div>
                            <input type="range" class="aural-slider__input" min="0" max="100" value="60">
                        </div>
                        <div class="aural-slider aural-slider--error" id="demo-slider-error">
                            <div class="aural-slider__label-row">
                                <label class="aural-slider__label">Error</label>
                                <span class="aural-slider__value">40</span>
                            </div>
                            <input type="range" class="aural-slider__input" min="0" max="100" value="40">
                        </div>
                    </div>
                </div>
            </div>
    
    </main>

    <!-- Aural UI JavaScript -->
    <script src="../aural-ui.js?v=9"></script>

    <!-- Navigation & Theme Toggle -->
    <script>
        

        

        

        // Theme Toggle with localStorage persistence
        function toggleTheme() {
            const themeLink = document.getElementById('theme-link');
            const currentTheme = themeLink.getAttribute('href');

            if (currentTheme.includes('dark')) {
                themeLink.setAttribute('href', '../light.css');
                localStorage.setItem('aural-theme', 'light');
            } else {
                themeLink.setAttribute('href', '../dark.css');
                localStorage.setItem('aural-theme', 'dark');
            }
        }

        // Load saved theme on page load
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('aural-theme') || 'dark';
            const themeLink = document.getElementById('theme-link');
            themeLink.setAttribute('href', `../${savedTheme}.css`);

            // Close mobile menu when clicking navigation links
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    // Only close on mobile
                    if (window.innerWidth <= 768) {
                    }
                });
            });
        });

        // Initialize Lucide Icons
        lucide.createIcons();

        // Slider functionality
        class Slider {
            constructor(element) {
                this.container = element;
                this.input = element.querySelector('.aural-slider__input');
                this.valueDisplay = element.querySelector('.aural-slider__value');

                if (!this.input || !this.valueDisplay) return;

                this.init();
            }

            init() {
                // Update value display on input
                this.input.addEventListener('input', () => {
                    this.updateValue();
                });

                // Initialize the value
                this.updateValue();
            }

            updateValue() {
                this.valueDisplay.textContent = this.input.value;
            }
        }

        // Initialize all sliders
        document.addEventListener('DOMContentLoaded', () => {
            const sliders = document.querySelectorAll('.aural-slider');
            sliders.forEach(slider => new Slider(slider));
        });
    </script>

    <script>

        // Auto-scroll active nav item into view
        document.addEventListener('DOMContentLoaded', function() {
            const activeLink = document.querySelector('.nav-link.active');
            if (activeLink) {
                // Scroll the active item into view with some offset
                setTimeout(() => {
                    activeLink.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
            }
        });

    </script>
    <!-- Unified Theme Sync -->
    <script>
    (function() {
        // Sync theme from localStorage
        const savedTheme = localStorage.getItem('theme') || 'dark';
        const themeLink = document.getElementById('theme-link');
        if (themeLink) {
            const isInComponents = window.location.pathname.includes('/components/');
            const relativePath = isInComponents ? '../' : './';
            themeLink.href = savedTheme === 'dark' ? relativePath + 'dark.css' : relativePath + 'light.css';
        }

        // Hide theme toggle in iframe (demo.html controls theme)
        try {
            if (window.self !== window.top) {
                const themeToggle = document.querySelector('.theme-toggle');
                if (themeToggle) {
                    themeToggle.style.display = 'none';
                }
            }
        } catch (e) {}
    })();
    </script>
</body>
</html>

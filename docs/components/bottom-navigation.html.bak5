<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Bottom Navigation - Aural UI</title>

    <!-- Aural UI CSS -->
    <link rel="stylesheet" href="../aural-ui.css?v=9">

    <!-- Theme CSS (will be set by JavaScript) -->
    <link rel="stylesheet" href="../dark.css" id="theme-link">

    <!-- Lucide Icons -->
    <script src="https://unpkg.com/lucide@latest"></script>

    <style>
        body {
            display: flex;
            margin: 0;
            padding: 0;
        }

        /* Sidebar Navigation */
        

        

        

        

        

        

        
        
        
        
        
        
        
        

        
            50% { transform: scaleY(1); opacity: 1; }
        }

        

        

        

        
            50% { transform: scale(1.3); opacity: 0.7; }
        }

        
            50% { transform: scale(0.9); opacity: 0.5; }
        }

        

        

        

        

        

        

        

        

        

        

        

        

        

        

        /* Main Content */
        .main-content {
            
            flex: 1;
            padding: var(--space-8);
            max-width: calc(1400px + 280px);
        }

        .page-header {
            margin-bottom: var(--space-8);
        }

        .page-title {
            font-size: var(--text-4xl);
            font-weight: var(--font-bold);
            color: var(--color-text-primary);
            margin-bottom: var(--space-4);
        }

        .page-description {
            font-size: var(--text-lg);
            color: var(--color-text-secondary);
            line-height: var(--leading-relaxed);
        }

        /* Example Container */
        .example-container {
            margin-bottom: var(--space-8);
        }

        .example-label {
            font-size: var(--text-sm);
            font-weight: var(--font-semibold);
            color: var(--color-text-secondary);
            text-transform: uppercase;
            letter-spacing: var(--tracking-wide);
            margin-bottom: var(--space-3);
        }

        .example-demo {
            padding: var(--space-6);
            background: var(--color-bg-secondary);
            border: 1px solid var(--color-border-subtle);
            border-radius: var(--radius-md);
            margin-bottom: var(--space-4);
        }

        /* Theme Toggle */
        .theme-toggle {
            position: fixed;
            bottom: var(--space-6);
            right: var(--space-6);
            z-index: 1000;
        }

        /* Mobile Header */
        

        /* Mobile Menu Toggle */
        

        

        /* Sidebar Overlay */
        

        /* Mobile Styles */
                
    </style>
</head>
<body>
    <!-- Mobile Header -->
    
    </div>

    <!-- Sidebar Overlay -->
    

    <!-- Theme Toggle -->
    <div class="theme-toggle">
        <button class="btn btn-secondary" onclick="toggleTheme()">
            <i data-lucide="sun"></i>
            <span class="theme-toggle-text">Toggle Theme</span>
        </button>
    </div>

    <!-- Sidebar Navigation -->
    

    <!-- Main Content -->
    <main class="main-content">
        <div class="page-header">
            <h1 class="page-title">Bottom Navigation</h1>
            <p class="page-description">
                Mobile-friendly bottom navigation bar.
            </p>
        </div>

        
        <h2>Bottom Navigation</h2>
            <p class="showcase-subtitle">Mobile-first bottom navigation bar with icons and labels</p>

            <div class="example">
                <div class="example-label">Try It Out</div>
                <p style="color: var(--color-text-secondary); margin-bottom: var(--space-4);">Scroll down to see the bottom navigation in action. Click the button below to toggle it.</p>
                <button class="btn btn-primary" onclick="document.getElementById('demo-bottom-nav').classList.toggle('aural-bottom-nav--slide-out'); document.getElementById('demo-bottom-nav').classList.toggle('aural-bottom-nav--slide-in');">
                    Toggle Bottom Nav
                </button>
            </div>
    
    </main>

    <!-- Bottom Navigation Component -->
    <nav class="aural-bottom-nav aural-bottom-nav--slide-in" id="demo-bottom-nav">
        <button class="aural-bottom-nav__item aural-bottom-nav__item--active" data-nav="home">
            <i data-lucide="home"></i>
            <span class="aural-bottom-nav__label">Home</span>
        </button>
        <button class="aural-bottom-nav__item" data-nav="search">
            <i data-lucide="search"></i>
            <span class="aural-bottom-nav__label">Search</span>
        </button>
        <button class="aural-bottom-nav__item" data-nav="notifications">
            <i data-lucide="bell"></i>
            <span class="aural-bottom-nav__label">Notifications</span>
            <span class="aural-bottom-nav__badge">3</span>
        </button>
        <button class="aural-bottom-nav__item" data-nav="profile">
            <i data-lucide="user"></i>
            <span class="aural-bottom-nav__label">Profile</span>
        </button>
    </nav>

    <!-- Aural UI JavaScript -->
    <script src="../aural-ui.js?v=9"></script>

    <!-- Navigation & Theme Toggle -->
    <script>
        

        

        

        // Theme Toggle with localStorage persistence
        function toggleTheme() {
            const themeLink = document.getElementById('theme-link');
            const currentTheme = themeLink.getAttribute('href');

            if (currentTheme.includes('dark')) {
                themeLink.setAttribute('href', '../light.css');
                localStorage.setItem('aural-theme', 'light');
            } else {
                themeLink.setAttribute('href', '../dark.css');
                localStorage.setItem('aural-theme', 'dark');
            }
        }

        // Load saved theme on page load
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('aural-theme') || 'dark';
            const themeLink = document.getElementById('theme-link');
            themeLink.setAttribute('href', `../${savedTheme}.css`);

            // Close mobile menu when clicking navigation links
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    // Only close on mobile
                    if (window.innerWidth <= 768) {
                    }
                });
            });
        });

        // Initialize Lucide Icons
        lucide.createIcons();

        // Bottom Navigation functionality
        document.addEventListener('DOMContentLoaded', () => {
            const bottomNav = document.getElementById('demo-bottom-nav');
            if (bottomNav) {
                const navItems = bottomNav.querySelectorAll('.aural-bottom-nav__item');

                navItems.forEach(item => {
                    item.addEventListener('click', () => {
                        // Remove active class from all items
                        navItems.forEach(nav => nav.classList.remove('aural-bottom-nav__item--active'));

                        // Add active class to clicked item
                        item.classList.add('aural-bottom-nav__item--active');

                        // Optional: Log which nav item was clicked
                        const navId = item.getAttribute('data-nav');
                        console.log('Navigated to:', navId);
                    });
                });
            }
        });
    </script>

    <script>

        // Auto-scroll active nav item into view
        document.addEventListener('DOMContentLoaded', function() {
            const activeLink = document.querySelector('.nav-link.active');
            if (activeLink) {
                // Scroll the active item into view with some offset
                setTimeout(() => {
                    activeLink.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
            }
        });

    </script>
    <!-- Unified Theme Sync -->
    <script>
    (function() {
        // Sync theme from localStorage
        const savedTheme = localStorage.getItem('theme') || 'dark';
        const themeLink = document.getElementById('theme-link');
        if (themeLink) {
            const isInComponents = window.location.pathname.includes('/components/');
            const relativePath = isInComponents ? '../' : './';
            themeLink.href = savedTheme === 'dark' ? relativePath + 'dark.css' : relativePath + 'light.css';
        }

        // Hide theme toggle in iframe (demo.html controls theme)
        try {
            if (window.self !== window.top) {
                const themeToggle = document.querySelector('.theme-toggle');
                if (themeToggle) {
                    themeToggle.style.display = 'none';
                }
            }
        } catch (e) {}
    })();
    </script>
</body>
</html>

    <script>
        

        

        

        // Theme Toggle with localStorage persistence
        function toggleTheme() {
            const themeLink = document.getElementById('theme-link');
            const currentTheme = themeLink.getAttribute('href');

            if (currentTheme.includes('dark')) {
                themeLink.setAttribute('href', '../light.css');
                localStorage.setItem('aural-theme', 'light');
            } else {
                themeLink.setAttribute('href', '../dark.css');
                localStorage.setItem('aural-theme', 'dark');
            }
        }

        // Load saved theme on page load
        window.addEventListener('DOMContentLoaded', () => {
            const savedTheme = localStorage.getItem('aural-theme') || 'dark';
            const themeLink = document.getElementById('theme-link');
            themeLink.setAttribute('href', `../${savedTheme}.css`);

            // Close mobile menu when clicking navigation links
            const navLinks = document.querySelectorAll('.nav-link');
            navLinks.forEach(link => {
                link.addEventListener('click', () => {
                    // Only close on mobile
                    if (window.innerWidth <= 768) {
                    }
                });
            });
        });

        // Initialize Lucide Icons
        lucide.createIcons();
    </script>

    <!-- Date Picker Component JavaScript -->
    <script>
        class DatePicker {
            constructor(elementId) {
                this.element = document.getElementById(elementId);
                if (!this.element) return;

                this.input = this.element.querySelector('.aural-date-picker__input');
                this.calendar = this.element.querySelector('.aural-date-picker__calendar');
                this.daysContainer = this.element.querySelector('.aural-date-picker__days');
                this.currentMonthDisplay = this.element.querySelector('.aural-date-picker__current-month');
                this.prevBtn = this.element.querySelector('[data-action="prev"]');
                this.nextBtn = this.element.querySelector('[data-action="next"]');

                this.currentDate = new Date();
                this.selectedDate = null;
                this.viewDate = new Date();

                this.monthNames = [
                    'January', 'February', 'March', 'April', 'May', 'June',
                    'July', 'August', 'September', 'October', 'November', 'December'
                ];

                this.init();
            }

            init() {
                // Toggle calendar
                this.input.addEventListener('click', () => {
                    this.toggleCalendar();
                });

                // Navigation buttons
                this.prevBtn.addEventListener('click', () => {
                    this.viewDate.setMonth(this.viewDate.getMonth() - 1);
                    this.renderCalendar();
                });

                this.nextBtn.addEventListener('click', () => {
                    this.viewDate.setMonth(this.viewDate.getMonth() + 1);
                    this.renderCalendar();
                });

                // Close calendar when clicking outside
                document.addEventListener('click', (e) => {
                    if (!this.element.contains(e.target)) {
                        this.closeCalendar();
                    }
                });

                // Keyboard support
                this.element.addEventListener('keydown', (e) => this.handleKeyboard(e));

                // Initial render
                this.renderCalendar();
            }

            toggleCalendar() {
                const isOpen = this.calendar.classList.contains('aural-date-picker__calendar--open');
                if (isOpen) {
                    this.closeCalendar();
                } else {
                    this.openCalendar();
                }
            }

            openCalendar() {
                this.calendar.classList.add('aural-date-picker__calendar--open');
                this.input.setAttribute('aria-expanded', 'true');
            }

            closeCalendar() {
                this.calendar.classList.remove('aural-date-picker__calendar--open');
                this.input.setAttribute('aria-expanded', 'false');
            }

            renderCalendar() {
                const year = this.viewDate.getFullYear();
                const month = this.viewDate.getMonth();

                // Update month/year display
                this.currentMonthDisplay.textContent = `${this.monthNames[month]} ${year}`;

                // Clear days
                this.daysContainer.innerHTML = '';

                // Get first day of month and number of days
                const firstDay = new Date(year, month, 1).getDay();
                const daysInMonth = new Date(year, month + 1, 0).getDate();
                const daysInPrevMonth = new Date(year, month, 0).getDate();

                // Previous month's days
                for (let i = firstDay - 1; i >= 0; i--) {
                    const day = daysInPrevMonth - i;
                    this.createDayButton(day, 'prev-month');
                }

                // Current month's days
                for (let day = 1; day <= daysInMonth; day++) {
                    this.createDayButton(day, 'current-month');
                }

                // Next month's days to fill the grid
                const totalCells = this.daysContainer.children.length;
                const remainingCells = 42 - totalCells; // 6 rows Ã— 7 days
                for (let day = 1; day <= remainingCells; day++) {
                    this.createDayButton(day, 'next-month');
                }
            }

            createDayButton(day, type) {
                const button = document.createElement('button');
                button.type = 'button';
                button.className = 'aural-date-picker__day';
                button.textContent = day;

                if (type === 'prev-month' || type === 'next-month') {
                    button.classList.add('aural-date-picker__day--other-month');
                }

                if (type === 'current-month') {
                    const dateToCheck = new Date(
                        this.viewDate.getFullYear(),
                        this.viewDate.getMonth(),
                        day
                    );

                    // Check if today
                    if (this.isSameDay(dateToCheck, this.currentDate)) {
                        button.classList.add('aural-date-picker__day--today');
                    }

                    // Check if selected
                    if (this.selectedDate && this.isSameDay(dateToCheck, this.selectedDate)) {
                        button.classList.add('aural-date-picker__day--selected');
                    }

                    button.addEventListener('click', () => {
                        this.selectDate(dateToCheck);
                    });
                } else {
                    // Handle prev/next month clicks
                    button.addEventListener('click', () => {
                        if (type === 'prev-month') {
                            this.viewDate.setMonth(this.viewDate.getMonth() - 1);
                        } else {
                            this.viewDate.setMonth(this.viewDate.getMonth() + 1);
                        }
                        this.renderCalendar();
                    });
                }

                this.daysContainer.appendChild(button);
            }

            selectDate(date) {
                this.selectedDate = date;
                this.input.value = this.formatDate(date);
                this.renderCalendar();
                this.closeCalendar();

                // Dispatch custom event
                const event = new CustomEvent('date-select', {
                    detail: { date: date }
                });
                this.element.dispatchEvent(event);
            }

            formatDate(date) {
                const month = String(date.getMonth() + 1).padStart(2, '0');
                const day = String(date.getDate()).padStart(2, '0');
                const year = date.getFullYear();
                return `${month}/${day}/${year}`;
            }

            isSameDay(date1, date2) {
                return date1.getFullYear() === date2.getFullYear() &&
                       date1.getMonth() === date2.getMonth() &&
                       date1.getDate() === date2.getDate();
            }

            handleKeyboard(e) {
                const isOpen = this.calendar.classList.contains('aural-date-picker__calendar--open');

                switch(e.key) {
                    case 'Escape':
                        if (isOpen) {
                            e.preventDefault();
                            this.closeCalendar();
                            this.input.focus();
                        }
                        break;
                    case 'Enter':
                        if (!isOpen) {
                            e.preventDefault();
                            this.openCalendar();
                        }
                        break;
                }
            }
        }

        // Initialize date picker
        document.addEventListener('DOMContentLoaded', () => {
            new DatePicker('demo-date-picker-1');
        });
    </script>

    <script>

        // Auto-scroll active nav item into view
        document.addEventListener('DOMContentLoaded', function() {
            const activeLink = document.querySelector('.nav-link.active');
            if (activeLink) {
                // Scroll the active item into view with some offset
                setTimeout(() => {
                    activeLink.scrollIntoView({ behavior: 'smooth', block: 'center' });
                }, 100);
            }
        });

    </script>
    <!-- Unified Theme Sync -->
    <script>
    (function() {
        // Sync theme from localStorage
        const savedTheme = localStorage.getItem('theme') || 'dark';
        const themeLink = document.getElementById('theme-link');
        if (themeLink) {
            const isInComponents = window.location.pathname.includes('/components/');
            const relativePath = isInComponents ? '../' : './';
            themeLink.href = savedTheme === 'dark' ? relativePath + 'dark.css' : relativePath + 'light.css';
        }

        // Hide theme toggle in iframe (demo.html controls theme)
        try {
            if (window.self !== window.top) {
                const themeToggle = document.querySelector('.theme-toggle');
                if (themeToggle) {
                    themeToggle.style.display = 'none';
                }
            }
        } catch (e) {}
    })();
    </script>

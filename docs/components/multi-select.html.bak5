    <!-- Multi-Select Component JavaScript -->
    <script>
        class MultiSelect {
            constructor(elementId) {
                this.element = document.getElementById(elementId);
                if (!this.element) return;

                this.trigger = this.element.querySelector('.aural-multi-select__trigger');
                this.dropdown = this.element.querySelector('.aural-multi-select__dropdown');
                this.searchInput = this.element.querySelector('.aural-multi-select__search-input');
                this.optionsContainer = this.element.querySelector('.aural-multi-select__options');
                this.tagsContainer = this.element.querySelector('.aural-multi-select__tags');
                this.placeholder = this.element.querySelector('.aural-multi-select__placeholder');
                this.clearBtn = this.element.querySelector('.aural-multi-select__clear');
                this.options = Array.from(this.element.querySelectorAll('.aural-multi-select__option'));

                this.selectedValues = new Set();
                this.focusedIndex = -1;

                this.init();
            }

            init() {
                // Toggle dropdown
                this.trigger.addEventListener('click', (e) => {
                    if (e.target.closest('.aural-multi-select__clear')) return;
                    this.toggleDropdown();
                });

                // Option selection
                this.options.forEach(option => {
                    option.addEventListener('click', () => {
                        this.toggleOption(option);
                    });
                });

                // Search functionality
                this.searchInput.addEventListener('input', (e) => {
                    this.filterOptions(e.target.value);
                });

                // Clear all
                this.clearBtn.addEventListener('click', (e) => {
                    e.stopPropagation();
                    this.clearAll();
                });

                // Close dropdown when clicking outside
                document.addEventListener('click', (e) => {
                    if (!this.element.contains(e.target)) {
                        this.closeDropdown();
                    }
                });

                // Keyboard navigation
                this.element.addEventListener('keydown', (e) => this.handleKeyboard(e));

                // Update clear button visibility
                this.updateClearButton();

                // Ensure dropdown is closed on initialization
                this.closeDropdown();
            }

            toggleDropdown() {
                const isOpen = this.dropdown.classList.contains('aural-multi-select__dropdown--open');
                if (isOpen) {
                    this.closeDropdown();
                } else {
                    this.openDropdown();
                }
            }

            openDropdown() {
                this.dropdown.classList.add('aural-multi-select__dropdown--open');
                this.searchInput.focus();
                this.trigger.setAttribute('aria-expanded', 'true');
            }

            closeDropdown() {
                this.dropdown.classList.remove('aural-multi-select__dropdown--open');
                this.searchInput.value = '';
                this.filterOptions('');
                this.trigger.setAttribute('aria-expanded', 'false');
            }

            toggleOption(option) {
                const value = option.dataset.value;
                const label = option.querySelector('.aural-multi-select__option-label').textContent;

                if (this.selectedValues.has(value)) {
                    this.selectedValues.delete(value);
                    option.classList.remove('aural-multi-select__option--selected');
                    this.removeTag(value);
                } else {
                    this.selectedValues.add(value);
                    option.classList.add('aural-multi-select__option--selected');
                    this.addTag(value, label);
                }

                this.updatePlaceholder();
                this.updateClearButton();
            }

            addTag(value, label) {
                const tag = document.createElement('span');
                tag.className = 'aural-multi-select__tag';
                tag.dataset.value = value;
                tag.innerHTML = `
                    <span class="aural-multi-select__tag-label">${label}</span>
                    <button class="aural-multi-select__tag-remove" aria-label="Remove ${label}" type="button">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2">
                            <line x1="18" y1="6" x2="6" y2="18"/>
                            <line x1="6" y1="6" x2="18" y2="18"/>
                        </svg>
                    </button>
                `;

                tag.querySelector('.aural-multi-select__tag-remove').addEventListener('click', (e) => {
                    e.stopPropagation();
                    const option = this.options.find(opt => opt.dataset.value === value);
                    if (option) this.toggleOption(option);
                });

                this.tagsContainer.appendChild(tag);
            }

            removeTag(value) {
                const tag = this.tagsContainer.querySelector(`[data-value="${value}"]`);
                if (tag) tag.remove();
            }

            clearAll() {
                this.selectedValues.clear();
                this.tagsContainer.innerHTML = '';
                this.options.forEach(option => {
                    option.classList.remove('aural-multi-select__option--selected');
                });
                this.updatePlaceholder();
                this.updateClearButton();
            }

            updatePlaceholder() {
                if (this.selectedValues.size > 0) {
                    this.placeholder.style.display = 'none';
                } else {
                    this.placeholder.style.display = 'block';
                }
            }

            updateClearButton() {
                if (this.selectedValues.size > 0) {
                    this.clearBtn.style.display = 'flex';
                } else {
                    this.clearBtn.style.display = 'none';
                }
            }

            filterOptions(searchTerm) {
                const term = searchTerm.toLowerCase();
                let hasVisibleOptions = false;

                this.options.forEach(option => {
                    const label = option.querySelector('.aural-multi-select__option-label').textContent.toLowerCase();
                    const groupLabel = option.previousElementSibling?.classList.contains('aural-multi-select__group-label')
                        ? option.previousElementSibling : null;

                    if (label.includes(term)) {
                        option.style.display = 'flex';
                        if (groupLabel) groupLabel.style.display = 'block';
                        hasVisibleOptions = true;
                    } else {
                        option.style.display = 'none';
                    }
                });

                // Hide group labels if no options in group are visible
                const groupLabels = this.optionsContainer.querySelectorAll('.aural-multi-select__group-label');
                groupLabels.forEach(label => {
                    const nextOptions = [];
                    let next = label.nextElementSibling;
                    while (next && !next.classList.contains('aural-multi-select__group-label')) {
                        if (next.classList.contains('aural-multi-select__option')) {
                            nextOptions.push(next);
                        }
                        next = next.nextElementSibling;
                    }
                    const hasVisible = nextOptions.some(opt => opt.style.display !== 'none');
                    label.style.display = hasVisible ? 'block' : 'none';
                });
            }

            handleKeyboard(e) {
                const isOpen = this.dropdown.classList.contains('aural-multi-select__dropdown--open');

                switch(e.key) {
                    case 'Escape':
                        if (isOpen) {
                            e.preventDefault();
                            this.closeDropdown();
                            this.trigger.focus();
                        }
                        break;
                    case 'Enter':
                        if (!isOpen) {
                            e.preventDefault();
                            this.openDropdown();
                        } else if (this.focusedIndex >= 0) {
                            e.preventDefault();
                            const visibleOptions = this.options.filter(opt => opt.style.display !== 'none');
                            if (visibleOptions[this.focusedIndex]) {
                                this.toggleOption(visibleOptions[this.focusedIndex]);
                            }
                        }
                        break;
                    case 'ArrowDown':
                        if (isOpen) {
                            e.preventDefault();
                            this.focusNextOption();
                        }
                        break;
                    case 'ArrowUp':
                        if (isOpen) {
                            e.preventDefault();
                            this.focusPreviousOption();
                        }
                        break;
                }
            }

            focusNextOption() {
                const visibleOptions = this.options.filter(opt => opt.style.display !== 'none');
                if (visibleOptions.length === 0) return;

                this.focusedIndex = (this.focusedIndex + 1) % visibleOptions.length;
                this.updateOptionFocus(visibleOptions);
            }

            focusPreviousOption() {
                const visibleOptions = this.options.filter(opt => opt.style.display !== 'none');
                if (visibleOptions.length === 0) return;

                this.focusedIndex = this.focusedIndex <= 0 ? visibleOptions.length - 1 : this.focusedIndex - 1;
                this.updateOptionFocus(visibleOptions);
            }

            updateOptionFocus(visibleOptions) {
                visibleOptions.forEach((opt, idx) => {
                    if (idx === this.focusedIndex) {
                        opt.classList.add('aural-multi-select__option--focused');
                        opt.scrollIntoView({ block: 'nearest' });
                    } else {
                        opt.classList.remove('aural-multi-select__option--focused');
                    }
                });
            }
        }

        // Initialize multi-select component
        document.addEventListener('DOMContentLoaded', () => {
            new MultiSelect('demo-multi-select-1');
        });
    </script>

